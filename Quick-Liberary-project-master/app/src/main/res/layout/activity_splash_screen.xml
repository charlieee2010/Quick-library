<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Control.SplashScreen"
    android:background="?attr/splashBackgroundColor"
    android:theme="@style/ThemeOverlay.QuickLiberary.SplashScreenContainer">

    <ImageView
        android:id="@+id/SplashAppIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-500dp"
        android:layout_centerInParent="true"
        android:src="@drawable/books"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/SplashAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@+id/SplashAppIcon"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="?attr/splashTextColor"
        tools:ignore="InvalidId" />

    <ProgressBar
        android:id="@+id/SplashProgressBar"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_below="@+id/SplashAppName"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:indeterminateTint="@color/white"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="?attr/splashFooterColor"
    android:padding="15px">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

</LinearLayout>

</RelativeLayout>